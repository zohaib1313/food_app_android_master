<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="AppTextViewBold">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/_8sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_16sdp</item>


    </style>

    <style name="ButtonShape" parent="@style/Widget.Neumorph.Button">
        <item name="neumorph_shadowElevation">6dp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="neumorph_shadowColorDark">@color/app_color_gray23</item>
        <item name="neumorph_shadowColorLight">@color/white</item>
        <item name="android:textStyle">bold</item>

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:lineSpacingExtra">@dimen/_8sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="neumorph_shapeType">flat</item>
        <item name="neumorph_backgroundColor">@color/app_color_blue</item>

    </style>
    <style name="ButtonShapeFlat" parent="@style/Widget.Neumorph.Button">
        <item name="neumorph_shadowElevation">6dp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="neumorph_shadowColorDark">@color/app_color_gray23</item>
        <item name="neumorph_shadowColorLight">@color/white</item>
        <item name="android:textStyle">bold</item>
<item name="neumorph_cornerFamily">oval</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:lineSpacingExtra">@dimen/_8sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="neumorph_shapeType">flat</item>
        <item name="neumorph_backgroundColor">@color/app_color_blue</item>

    </style>

    <style name="AppTextViewNormal">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/_8sdp</item>
        <item name="android:textColor">@color/app_color_gray</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="AppTextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>

    </style>

    <style name="AppTextInputEditTextNoDrawable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="FullScreen" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen">

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="RoundedButtonBlue">
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">@dimen/_8sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_btn_blue</item>
    </style>


</resources>